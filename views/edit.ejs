<%- include ('partials/_header') %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%=course._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="nombre" value="<%=course.nombre %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="profesor" placeholder="profesor" value="<%=course.profesor %>">
            </div><div class="form-group">
              <input class="form-control" type="text" name="descripcion" placeholder="descripcion" value="<%=course.descripcion %>">
            </div><div class="form-group">
              <input class="form-control" type="text" name="area" placeholder="area" value="<%=course.area %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="precio" placeholder="precio" value="<%=course.precio %>">
            </div> 
            <button class="btn btn-primary  btn-lg btn-block" type="submit">
              Actualizar 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

